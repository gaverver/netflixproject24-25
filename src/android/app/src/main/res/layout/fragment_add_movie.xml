<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?attr/colorSecondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="16dp">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Movie Name"
            android:inputType="text"
            android:layout_marginBottom="8dp"
            android:textColor="#b3b3b3"
            android:textColorHint="#b3b3b3"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:lines="3"
            android:layout_marginBottom="8dp"
            android:textColor="#b3b3b3"
            android:textColorHint="#b3b3b3"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_actors"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Actors (comma-separated)"
            android:inputType="text"
            android:layout_marginBottom="8dp"
            android:textColor="#b3b3b3"
            android:textColorHint="#b3b3b3"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_age_limit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Age Limit"
            android:inputType="number"
            android:layout_marginBottom="8dp"
            android:textColor="#b3b3b3"
            android:textColorHint="#b3b3b3"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_creators"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Creators (comma-separated)"
            android:inputType="text"
            android:layout_marginBottom="8dp"
            android:textColor="#b3b3b3"
            android:textColorHint="#b3b3b3"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_categories"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Categories (comma-separated)"
            android:inputType="text"
            android:layout_marginBottom="8dp"
            android:textColor="#b3b3b3"
            android:textColorHint="#b3b3b3"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_published"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Published Date"
            android:inputType="date"
            android:layout_marginBottom="16dp"
            android:textColor="#b3b3b3"
            android:textColorHint="#b3b3b3"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btn_select_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Video"
            android:layout_marginBottom="8dp"
            android:background="#e50914"
            android:textColor="?attr/colorTertiary"
            android:textSize="16sp"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btn_select_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:layout_marginBottom="16dp"
            android:background="#e50914"
            android:textColor="?attr/colorTertiary"
            android:textSize="16sp"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btn_add_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Movie"
            android:layout_marginBottom="16dp"
            android:background="#e50914"
            android:textColor="?attr/colorTertiary"
            android:textSize="16sp"
            android:padding="12dp"/>

    </LinearLayout>
</ScrollView>