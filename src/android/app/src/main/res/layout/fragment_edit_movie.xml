<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="16dp">

        <!-- Movie ID Input -->
        <EditText
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Movie ID"
            android:inputType="text"
            android:layout_marginBottom="8dp"/>

        <!-- Search Button -->
        <Button
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search"
            android:layout_marginBottom="16dp"/>

        <!-- Edit Movie Fields (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/edit_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Movie Name"
                android:inputType="text"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:lines="3"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/et_actors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Actors (comma-separated)"
                android:inputType="text"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/et_age_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age Limit"
                android:inputType="number"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/et_creators"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Creators (comma-separated)"
                android:inputType="text"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/et_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Categories (comma-separated)"
                android:inputType="text"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/et_published"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Published Date"
                android:inputType="date"
                android:layout_marginBottom="16dp"/>

            <!-- Edit and Delete Buttons -->
            <Button
                android:id="@+id/btn_edit_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Movie"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_delete_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Movie"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FF0000"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
